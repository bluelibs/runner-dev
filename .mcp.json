{
  "mcpServers": {
    "runner_dev": {
      "description": "BlueLibs Runner Dev GraphQL MCP server",
      "command": "ts-node",
      "args": ["src/mcp.ts"],
      "env": {
        "ENDPOINT": "http://localhost:31337/graphql",
        "ALLOW_MUTATIONS": "true"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"]
    }
  }
}
